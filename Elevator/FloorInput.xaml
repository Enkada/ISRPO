<Window x:Class="Elevator.FloorInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elevator"
        mc:Ignorable="d"
        Height="140" Width="160" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="16" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Margin="0 0 0 2">Количество этажей</TextBlock>
        <TextBox x:Name="tbNumber" PreviewTextInput="NumberValidationTextBox" Margin="0 0 0 8">12</TextBox>
        <Button x:Name="btnEnter" Click="btnEnter_Click">Далее</Button>
    </StackPanel>
</Window>
